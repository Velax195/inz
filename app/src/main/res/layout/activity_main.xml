<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kszych.getdata.MainActivity">

    <TextView
        android:id="@+id/serverIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192.168.0.14"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>
    
    <Button
        android:id="@+id/btON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serverIP"
        android:layout_marginTop="40dp"
        android:text="Led on"/>

    <Button
        android:id="@+id/btOFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btON"
        android:layout_marginTop="40dp"
        android:text="Led off"/>

    <Button
        android:id="@+id/btTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btOFF"
        android:layout_marginTop="40dp"
        android:text="Get Value"/>


    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btTimer"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
